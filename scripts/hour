#!/bin/bash

declare -A clock

clock[1]='ğŸ•'
clock[2]='ğŸ•‘'
clock[3]='ğŸ•’'
clock[4]='ğŸ•“'
clock[5]='ğŸ•”'
clock[6]='ğŸ••'
clock[7]='ğŸ•–'
clock['8']='ğŸ•—'
clock[9]='ğŸ•˜'
clock[10]='ğŸ•™'
clock[11]='ğŸ•š'
clock[12]='ğŸ•›'

hour="$(date '+%-I')"
minute="$(date '+%M')"

if [[ "$hour" == "8" ]]; then
  echo "yes"
fi

if [[ "$minute" -ge "30" ]]; then
  clock[1]='ğŸ•œ'
  clock[2]='ğŸ•'
  clock[3]='ğŸ•'
  clock[4]='ğŸ•Ÿ'
  clock[5]='ğŸ• '
  clock[6]='ğŸ•¡'
  clock[7]='ğŸ•¢'
  clock[8]='ğŸ•£'
  clock[9]='ğŸ•¤'
  clock[10]='ğŸ•¥'
  clock[11]='ğŸ•¦'
  clock[12]='ğŸ•§'
fi

echo "${clock[$hour]} $(date '+%H:%M')"
